extends layout 

mixin card(stageBg, stageWinPct, stageWinGames, stageLosePct, stageLoseGames, allPct, stagePct)
  .relative.w-full.max-w-lg.m-4.shadow-lg
    div.w-full.aspect-video.bg-cover.bg-center.contrast-50.grayscale-50.opacity-60(style=`background-image: url('/images/stages/${stageBg}.png')`)
    div.absolute.top-0.bottom-0.left-0.bg-red-700.opacity-50(style=`right: ${100-stagePct}%`)
    div.absolute.w-6.h-full.top-0.cursor-pointer.tooltip.indicator(data-tooltip=`Winrate across all stages: ${allPct}%` class="-translate-x-1/2 before:content-[attr(data-tooltip)] before:absolute before:opacity-0 before:bg-slate-900 before:rounded-md before:text-white before:px-2 before:py-1 before:whitespace-pre before:left-1/2 before:-top-2 before:-translate-x-1/2 before:-translate-y-full" style=`left: ${allPct}%`)
      div.absolute.w-2.h-2.indicator-top.border-transparent.border-t-slate-600.indicator-arrow(class="left-1/2 -translate-x-1/2" style="top: -4px")
      div.absolute.w-2.h-2.indicator-bottom.border-transparent.border-b-slate-600.indicator-arrow(class="left-1/2 -translate-x-1/2" style="top: calc(100% - 20px)")
      div.absolute.top-0.h-full.bg-slate-600.indicator-bar(class="left-1/2 -translate-x-1/2 w-1.5")

    .absolute.inset-0.pointer-events-none.flex
      .basis-full.flex.flex-col.justify-center.items-center 
        span.pointer-events-auto.text-xl.font-bold(class="sm:text-2xl") WIN 
        span.pointer-events-auto.font-fjalla.text-3xl.font-bold(class="sm:text-6xl") #{stageWinPct}%
        span.pointer-events-auto (#{stageWinGames} games)
      .basis-full.flex.flex-col.justify-center.items-center
        span.pointer-events-auto.text-xl.font-bold(class="sm:text-2xl") LOSE 
        span.pointer-events-auto.font-fjalla.text-3xl.font-bold(class="sm:text-6xl") #{stageLosePct}%
        span.pointer-events-auto (#{stageLoseGames} games)

block content
  div.flex.flex-col(class="md:flex-row")
    div.bg-slate-500(class="md:w-48 lg:w-64")
      div Sidebar
    div.relative.flex.flex-col.items-center.flex-1
      h2 Stage data for #{name}
      h4 Overall win-loss: #{wins} - #{losses}
      h4 Overall win percentage: #{winPct}%
      
      h3 Stage-specific data
      h4.font-fjalla.uppercase.text-6xl.font-bold.bg-black.text-white.px-8.py-2.pt-3.m-3 Starters
      ul.flex.flex-row.flex-wrap.w-full.m-2.gap-4.px-6
        each stage in stageData.starterStages
          li.flex.flex-col.items-center(class="w-full xl:w-auto xl:flex-1 xl:basis-1/3")
            h4.font-fjalla.text-3xl.font-bold= stage.stage
            +card(stageBgs[stage.stage], stage.winPct, stage.wins, stage.losePct, stage.losses, winPct, stage.winPct)
      
      h4.font-fjalla.uppercase.text-6xl.font-bold.bg-black.text-white.px-8.py-2.pt-3.m-3 Counterpicks
      ul.flex.flex-row.flex-wrap.items-center.w-full.justify-center.p-3
        each stage in stageData.counterpickStages
          li.flex.flex-col.items-center(class="w-full xl:w-auto xl:flex-auto xl:basis-1/2")
            h4.font-fjalla.text-3xl.font-bold= stage.stage
            +card(stageBgs[stage.stage], stage.winPct, stage.wins, stage.losePct, stage.losses, winPct, stage.winPct)

      h4.font-fjalla.uppercase.text-6xl.font-bold.bg-black.text-white.px-8.py-2.pt-3.m-3 Retired
      ul.flex.flex-row.flex-wrap.items-center.w-full.justify-center.p-3
        each stage in stageData.retiredStages
          li.flex.flex-col.items-center(class="w-full xl:w-auto xl:flex-auto xl:basis-1/2")
            h4.font-fjalla.text-3xl.font-bold= stage.stage
            +card(stageBgs[stage.stage], stage.winPct, stage.wins, stage.losePct, stage.losses, winPct, stage.winPct)

      h4.font-fjalla.uppercase.text-6xl.font-bold.bg-black.text-white.px-8.py-2.pt-3.m-3 Low Data
      ul.flex.flex-row.flex-wrap.items-center.w-full.justify-center.p-3
        each stage in stageData.lowDataStages
          li.flex.flex-col.items-center(class="w-full xl:w-auto xl:flex-auto xl:basis-1/2")
            h4.font-fjalla.text-3xl.font-bold= stage.stage
            +card(stageBgs[stage.stage], stage.winPct, stage.wins, stage.losePct, stage.losses, winPct, stage.winPct)